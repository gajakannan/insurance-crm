{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nebula.local/schemas/problem-details.schema.json",
  "title": "ProblemDetails",
  "description": "RFC 7807 problem details payload with Nebula extension fields.",
  "type": "object",
  "required": [
    "type",
    "title",
    "status",
    "code",
    "traceId"
  ],
  "properties": {
    "type": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "type": "integer",
      "minimum": 400,
      "maximum": 599
    },
    "detail": {
      "type": "string"
    },
    "instance": {
      "type": "string",
      "format": "uri"
    },
    "code": {
      "type": "string"
    },
    "traceId": {
      "type": "string"
    },
    "errors": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": true
}
