{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nebula.local/schemas/broker-create-request.schema.json",
  "title": "BrokerCreateRequest",
  "description": "Validation rules for creating a broker.",
  "type": "object",
  "required": [
    "legalName",
    "licenseNumber",
    "state"
  ],
  "properties": {
    "legalName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "licenseNumber": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "state": {
      "type": "string",
      "pattern": "^[A-Z]{2}$"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string",
      "pattern": "^\\+?[1-9]\\d{7,14}$"
    }
  },
  "additionalProperties": false
}
